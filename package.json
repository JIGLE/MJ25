{
  "name": "mj25-wedding-website",
  "private": true,
  "version": "1.0.0",
  "description": "Marlene & Jose's Wedding Website",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "dev:network": "vite --host 0.0.0.0 --port 3000",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "clean": "rimraf dist node_modules/.vite",
    "clean:win": "if exist dist rmdir /s /q dist && if exist node_modules\\.vite rmdir /s /q node_modules\\.vite",
    "fresh-install": "rimraf node_modules package-lock.json && npm install",
    "fresh-install:win": "if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json && npm install",
    "docker:build": "docker build -t mj25-wedding .",
    "docker:run": "docker run -p 30080:80 mj25-wedding",
    "docker:dev": "./dev-server.sh",
    "docker:npm": "./npm-docker.sh",
    "deploy:local": "npm run build && docker-compose up -d --build"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "i18next": "^24.2.3",
    "react-i18next": "^15.4.1",
    "i18next-browser-languagedetector": "^8.0.4",
    "firebase": "^11.5.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "rimraf": "^3.0.2",
    "sass": "^1.58.0",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
